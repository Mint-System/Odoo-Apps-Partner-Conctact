            </field>
        </field>
    </record>
    <record id="view_partner_form_secondary_email" model="ir.ui.view">
        <field name="name">Add secondary email on partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
